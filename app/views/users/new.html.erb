<h1>Register</h1>

<%= form_with model: @user, local: true do |f| %>
  <%= f.label 'Username' %>
  <%= f.text_field :username, value: @user.username %>

  <%= f.label 'Password' %>
  <%= f.password_field :password %>

  <%= f.label 'Password Confirmation' %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit 'Submit' %>
<% end %>
